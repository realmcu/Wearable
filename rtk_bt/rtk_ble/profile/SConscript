Import('TOOL_ROOT')

Import('SDK_ROOT')
from building import *

cwd = GetCurrentDir()
list = os.listdir(cwd)

# add the general drivers.
src = Split("""
""")

src += [SDK_ROOT + '/src/ble/profile/server/bas.c']
src += [SDK_ROOT + '/src/ble/profile/server/dis.c']
src += [SDK_ROOT + '/src/ble/profile/server/hids_ms.c']
src += [SDK_ROOT + '/src/ble/profile/client/gatts_client.c']
src += [SDK_ROOT + '/src/ble/profile/client/ancs_client.c']
if GetDepend(['DFU_BLE_SERVICE']):
    src += [SDK_ROOT + '/src/ble/profile/server/dfu_service.c']
if GetDepend(['USING_BR_TASK']):
    src += [SDK_ROOT + '/src/ble/profile/server/transmit_service.c']
if GetDepend(['PRIVATE_SERVICE']):
    src += ['wristband_private_service.c']
if GetDepend(['CONFIG_RTK_PRIVATE_SERVICE']):
    src = ['wristband_private_service.c']
if GetDepend(['RTK_BLE_THROUGHPUT']):
    src += ['wristband_private_service.c']


CPPPATH = [cwd]

group = DefineGroup('realtek_ble', src, depend = [''], CPPPATH = CPPPATH)

Return('group')